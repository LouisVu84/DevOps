@model DataAccess.SMDB.EmailConfig

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edit" : "Create") Group</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SenderName"></label>
            </div>
            <div class="col-6">
                <input asp-for="SenderName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToMail"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToMail" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="CCMail"></label>
            </div>
            <div class="col-6">
                <input asp-for="CCMail" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Subject">Subject Format</label>
            </div>
            <div class="col-6">
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Message">Message Format</label>
            </div>
            <div class="col-6">
                <textarea asp-for="Message" class="form-control" rows="3">
                    </textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DataSign">DataSign</label>
            </div>
            <div class="col-6">
                <input asp-for="DataSign" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Alert" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>