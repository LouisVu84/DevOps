<div class="col-6">
    <p><h2 class="text-dark">Service Configuration</h2></p>
</div>
<div class="col-2">
    <p>
        <a asp-action="ServiceInsertOrUpdate" asp-controller="Config" class="btn btn-dark form-control text-white">
            Add service
        </a>
    </p>
</div>
<div class="col-12 p-3">
    <div class="offset-3">
        <select id="DDL_Load">
            <option value="0">Select group</option>
        </select>
    </div>
    <table id="DT_load" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Url</th>
                <th class="text-center">CreatedTime</th>
                <th class="text-center">Status</th>
                <th class="text-center">Enable</th>
                <th class="text-center">Special Case</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/servicesettings.js"></script>
