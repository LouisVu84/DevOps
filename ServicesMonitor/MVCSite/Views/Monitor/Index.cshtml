@model DataAccess.SMDB.ServicesLog

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">MONITOR</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Index" asp-controller="Monitor" class="btn btn-info form-control text-white">
            Refresh health check
        </a>
    </div>
    <div class="col-12 border p-3">
        <div class="form-group row">
            <div class="col-3">
                <label>Group</label>
            </div>
            <div class="col-6">
                <select id="DDL_Load">
                    <option selected="selected" value="0">Select group</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Total Services</label>
            </div>
            <div class="col-6">
                <label id="totalServiceCount"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>ERROR Services</label>
            </div>
            <div class="col-6">
                <label id="errorServiceCount"></label>
            </div>
        </div>
        
            <table id="DT_load" class="table table-striped table-bordered" style="width: 100%">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Url</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">UpdatedTime</th>
                    </tr>
                </thead>
            </table>
        
    </div>
</div>
@section Scripts{
    <script src="~/js/monitor.js"></script>
}


