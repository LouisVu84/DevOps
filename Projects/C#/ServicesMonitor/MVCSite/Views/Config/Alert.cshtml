

<div class="col-6">
    <p><h2 class="text-dark">Alert Configuration</h2></p>
</div>
<div class="p-3">
    <div class="col-12 font-italic">
        * Type 1: Alert when services down
    </div>
    <div class="col-12 font-italic">
        * Type 2: Alert when services up
    </div>
</div>
<hr />
<div class="col-5">
    <p>
        <h4>Email</h4>
    </p>
</div>
<div class="p-3">
    <div class="col-12">
        @*<p>
            <a class="btn form-control btn-primary" asp-action="EmailInsertOrUpdate" asp-controller="Config">
                Update
            </a>
        </p>*@
        <table id="DT_EmailLoad" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>SenderName</th>
                    <th>ToMail</th>
                    <th>CCMail</th>
                    <th>DataSign</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<hr />
<div class="col-5">
    <p>
        <h4>SMS</h4>
    </p>
</div>
<div class="p-3">
    <div class="col-12">
        <p>
            <a class="btn form-control btn-primary" asp-action="SmsInsertOrUpdate" asp-controller="Config" style="width: 120px">
                Create new
            </a>
        </p>
        <table id="DT_SmsLoad" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>AccountName</th>
                    <th>Mobile</th>
                    <th>Message</th>
                    <th>DataSign</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/alertsettings.js"></script>
}
